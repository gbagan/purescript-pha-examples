module G2048.InputModel where

data Direction = U | D | L | R | None
derive instance eqDir :: Eq Direction

data Action = Init | NewGame | GetArrows Arrows | Continue | Sync | NoOp

toDirection :: String -> Direction
toDirection arr@Arrows {..} =
  case (arrowX, arrowY) of
    (-1, 0) -> L
    (1, 0) -> R
    (0, -1) -> D
    (0, 1) -> U
    _ -> None
